{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"lib": [
			"ES2019"
		],
		"declaration": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vitest/globals"]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}
